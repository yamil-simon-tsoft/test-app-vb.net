# Variables de entorno para automatización de aplicaciones VB.NET

# WinAppDriver Configuration
WINAPPDRIVER_URL=http://127.0.0.1:4723
WINAPPDRIVER_TIMEOUT=30

# Microsoft Word Configuration
WORD_APP_PATH=C:\Program Files\Microsoft Office\root\Office16\WINWORD.EXE
WORD_APP_ID=Microsoft.Office.WINWORD

# VB.NET Application Configuration (personalizar según aplicación)
VB_APP_PATH=C:\Path\To\Your\VBApp.exe
VB_APP_ID=YourVBApp.Application
VB_APP_WINDOW_TITLE=Your VB Application Title

# Timeouts Configuration (segundos)
IMPLICIT_WAIT=10
EXPLICIT_WAIT=20
APPLICATION_STARTUP_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=reports/logs/automation.log
CONSOLE_LOG_ENABLED=true

# Screenshots Configuration
SCREENSHOT_ON_ERROR=true
SCREENSHOT_ON_SUCCESS=false
SCREENSHOT_PATH=reports/screenshots
SCREENSHOT_FORMAT=PNG

# Automation Behavior
AUTO_RETRY_COUNT=3
RETRY_DELAY_SECONDS=2
CLOSE_APP_ON_FINISH=true

# Word Specific Settings
WORD_STARTUP_TIMEOUT=15
WORD_DOCUMENT_SAVE_PATH=reports/documents
WORD_AUTO_SAVE=true

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
PAUSE_BETWEEN_ACTIONS=0.5